extern c_exit(retval: word);

struct Number { a: word, }

impl Number {
    @static
    fn new(n: word) -> @: @ { a: n, };

    fn __bool__ -> bool: .a;
}

fn main {
    let zero = Number.new(0);
    let one = Number.new(1);

    assert one;
    assert not zero;
    assert zero or one;
    assert one and one;
    assert one and not zero;
    c_exit(0);
}
